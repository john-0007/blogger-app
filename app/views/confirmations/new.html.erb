<div class="ui main text container segment">
  <h1>Lets confirm your email</h1>
  <div class="ui form">
    <%= form_tag confirmation_path do%>
    <div class="field">
      <%=label_tag :token%>
      <%=text_field_tag :token,nil,placeholder: "Past your token"%>
    </div>
    <div class="field">
      <%=submit_tag "verify my email"%>
    </div>
    <%end%>
  </div>
</div>
